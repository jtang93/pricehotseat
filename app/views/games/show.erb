<h1><%= @game.name %></h1>
<h2>Room Code: <%= @game.room_code %></h2>

<% if !@game.started %>

  <hr>

  <h3>Players:</h3>
  <% @game.players.each do |player| %>
    <p><%= player.name %></p>
  <% end %>

  <hr>

  <% if @game.players.size < 4 %>
    <h3>Add New Player:</h3>
    <%= form_for @player do |f| %>
      <%= f.hidden_field :room_code, :value => @game.room_code %>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>
      <%= f.submit %>
    <% end %>
    <hr>
  <% end %>

  <% if !@game.players.empty? %>
    <%= button_to "Start Game", rounds_path({game_id: @game.id}) %>
  <% end %>
<% else %>

  <hr>

  <h3>Round <%= @game.rounds.size %></h3>

  <hr>

  <p>Picture of Product</p>
  <%= image_tag @round.item.img_url%>
  <p>Name of Product</p>
  <%= @round.item.name %>

  <hr>

  <% @game.players.each do |player| %>
    <div>
      <h4> <%= player.name %> </h4>
      <% if choice = player.choice_for(@round) %>
        <p>Guess Ammount: <%= choice.guess_ammount %> </p>
      <% else %>
        <% choice = Choice.new %>
        <%= form_for choice do |f| %>
          <%= f.hidden_field :player_id, :value => player.id %>
          <%= f.hidden_field :round_id, :value => @round.id %>
          <%= f.label "Guess Amount" %>
          <%= f.number_field :guess_ammount %>
          <%= f.submit %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <% if @game.all_players_choices_are_in %>
    <%= button_to "Show Results", round_path(id: @round.id) %>
  <% end %>

<% end %>
