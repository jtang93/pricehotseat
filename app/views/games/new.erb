<div class="show">
<h1>Start New Game</h1>

  <div class="form_container">
<%= form_for @game do |f| %>
  <%= f.label "Game name:" %>
  <%= f.text_field :name %>
  <br></br>
  <%= f.label "Number of rounds:" %>
  <%= f.number_field :num_rounds %>
<br></br>
  <%= f.submit "Create New Game", class: "small_button" %>
<% end %>
  </div>
</div>
